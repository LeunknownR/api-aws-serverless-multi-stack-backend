{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": [
    "*.js",
    "**/node_modules/*",
    "**/.esbuild/*",
    "**/dist/*"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "max-lines": [
      "error",
      {
        "max": 400,
        "skipComments": true,
        "skipBlankLines": true
      }
    ]
  }
}